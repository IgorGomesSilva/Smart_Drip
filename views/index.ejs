<!doctype html>
<html lang="pt-br">
<head>
  <meta charset=utf-8>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/style.css">
  <title>Smart Drip</title>
</head>
<body>
  <header class="bg-dark">
    <div class="col-100">
      <h1 class="color-white"><%= title %></h1>
    </div>
  </header>
  <section>
    <div class="col-30 bg-grey">
      <form action="/add" method="post">
        <legend>Registrar Reclamação</legend>
        <input type="text" name="nome" placeholder="Nome">
        <input type="text" name="email" placeholder="Email">
        <input type="text" name="idade" placeholder="Idade">
        <textarea name="reclamacao" id="" rows="10" cols="30" placeholder="Digite aqui sua Reclamação"></textarea>
        <button type="submit" name="btnSalvar">Salvar</button>
      </form>
    </div>
    <div class="col-70">
      <table>
        <tbody>
          <% for (var i=0; i < usuario.length; i++) { %>
          <tr>
            <td>#<%= i+1 %> <strong>Nome: <%= usuario[i].nome %></strong></td>
            <td class="actions"><a href="/turn/<%= usuario[i]._id %>" class="<%= usuario[i].status ? '': 'color-red'%>">
              <%= usuario[i].status ? 'Respondida': 'Não respondida'%>
            </a></td>
            <td class="highlight">Email: <%= usuario[i].email %></td>
            <td class="highlight">Idade: <%= usuario[i].idade %></td>
            <td class="highlight">Reclamação: <%= usuario[i].reclamacao %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>
</body>
</html>
